# Cloud config for the ansible user
users:
  - name: ansible
    gecos: Ansible User
    groups: sudo
    shell: /bin/bash
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
    ssh_authorized_keys:
      - ${ansible_pubkey}
package_update: true
package_upgrade: false
packages:
  - curl
  - git
  - htop
  - chrony
runcmd:
  - timedatectl set-ntp true